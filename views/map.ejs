<script>





    <%if (   dataQuery.length  >0    ) {%>
console.log("ok");


        var mymap = L.map('mapid', {
            zoomControl: false
        }).setView([<%= dataQuery[0].isLocatedAt[0].schema_geo[0].schema_latitude %>, <%= dataQuery[0].isLocatedAt[0].schema_geo[0].schema_longitude %>], 7);

<%for (var i = 0; i < dataQuery.length; i++) {%>
